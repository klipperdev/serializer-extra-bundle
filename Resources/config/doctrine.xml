<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="klipper_serializer_extra.subscriber.doctrine_association"
                 class="Klipper\Bundle\SerializerExtraBundle\Listener\DoctrineAssociationSubscriber">
            <tag name="jms_serializer.event_subscriber"/>
        </service>

        <service id="klipper_serializer_extra.handler.doctrine_association"
                 class="Klipper\Bundle\SerializerExtraBundle\Handler\DoctrineAssociationHandler">
            <tag name="jms_serializer.handler" type="Klipper\Bundle\SerializerExtraBundle\Type\Relation" format="json" direction="serialization" method="serializeAssociation"/>
            <tag name="jms_serializer.handler" type="Klipper\Bundle\SerializerExtraBundle\Type\Relation" format="xml" direction="serialization" method="serializeAssociation"/>
            <argument type="service" id="doctrine" />
        </service>
    </services>
</container>
